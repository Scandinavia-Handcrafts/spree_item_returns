<% content_for :head do %>
  <%= javascript_include_tag 'spree/return_authorization' %>
<% end %>

<fieldset><h3><%= Spree.t(:new_return_request, scope: :return_authorizations_view) %></h3></fieldset>

<%= form_for [@order, @return_authorization] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <div class="form-actions" data-hook="buttons" style="display:<%= all_item_refunded? %>">
      <%= button Spree.t(:create), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.order_url(@order), icon: 'delete' %>
    </div>
  </fieldset>
<% end %>
